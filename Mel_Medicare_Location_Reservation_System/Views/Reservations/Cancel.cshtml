@model Mel_Medicare_Location_Reservation_System.Models.Reservation

@{
    ViewBag.Title = "Cancel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to cancel this reservation?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <!--<h4>Reservation</h4>-->
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.reservationId)
    @Html.HiddenFor(model => model.branchId)
    @Html.HiddenFor(model => model.customerId)
    @Html.HiddenFor(model => model.date)
    @Html.HiddenFor(model => model.status)



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cancel" class="btn btn-warning" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
